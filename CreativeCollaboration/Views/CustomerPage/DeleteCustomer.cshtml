@model CustomerDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <!-- Card Header -->
        <div class="card-header text-center"
             style="background: rgba(255, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            <h3 class="mb-0 text-light">Confirm Deletion</h3>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <h5 class="text-center text-light">Are you sure you want to delete this customer?</h5>
            <p class="text-center text-muted">This action cannot be undone.</p>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-borderless"
                               style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                            <tbody>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Name</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Email</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Phone</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.Phone)</td>
                                </tr>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">City</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.City)</td>
                                </tr>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">State</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.State)</td>
                                </tr>
                                <tr>
                                    <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Country</th>
                                    <td class="text-light">@Html.DisplayFor(model => model.Country)</td>
                                </tr>
                                @if (Model.LastOrderDate.HasValue)
                                {
                                    <tr>
                                        <td colspan="2" class="text-warning text-center">
                                            This customer has past orders. Deleting this customer will remove all their order history permanently.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Buttons -->
                    <form method="post" asp-action="DeleteCustomer" asp-route-id="@Model.CustomerId" class="text-center mt-4">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger px-4"
                                style="background: rgba(255, 0, 0, 0.2); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                            Delete
                        </button>
                        <a asp-action="List" class="btn btn-secondary px-4"
                           style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
