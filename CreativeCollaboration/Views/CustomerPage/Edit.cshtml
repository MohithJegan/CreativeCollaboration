@model AUCustomerDto

<div class="container mt-4">
    <h2 class="text-uppercase fw-bold text-light">Edit Customer</h2>

    <!-- Form -->
    <form asp-controller="CustomerPage" asp-action="Edit" asp-route-id="@Model.CustomerId" method="post"
          style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2); padding: 20px; border-radius: 15px;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CustomerId" />

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold text-light">Full Name:</label>
            <input asp-for="Name" class="form-control" placeholder="Enter full name" required
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold text-light">Email Address:</label>
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" required
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="mb-3">
            <label asp-for="Phone" class="form-label fw-bold text-light">Phone Number:</label>
            <input asp-for="Phone" class="form-control" type="tel" pattern="^[0-9]{10}$" placeholder="Enter phone number" required
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success fw-bold"
                    style="background: rgba(40, 167, 69, 0.8); border: 1px solid rgba(40, 167, 69, 0.8); color: white;">
                Save Changes
            </button>
            <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary fw-bold"
               style="background: rgba(108, 117, 125, 0.8); border: 1px solid rgba(108, 117, 125, 0.8); color: white;">Back to Details</a>
        </div>
    </form>
</div>
    