@model AUCustomerDto

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-uppercase fw-bold text-light">Add Customer</h2>
    <a asp-action="List" class="btn btn-outline-light px-4 py-2">
        Back to List
    </a>
</div>

<!-- Form -->
<form asp-action="AddCustomer" method="post"
      style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2); padding: 20px; border-radius: 15px;">
    @Html.AntiForgeryToken()

    <!-- Name -->
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label fw-semibold text-light">Name:</label>
        <input asp-for="Name" class="form-control" placeholder="Enter customer's name" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label fw-semibold text-light">Email:</label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter customer's email" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Phone -->
    <div class="form-group mb-3">
        <label asp-for="Phone" class="form-label fw-semibold text-light">Phone:</label>
        <input asp-for="Phone" class="form-control" type="tel" pattern="^[0-9]{10}$" placeholder="Enter customer's phone number" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <!-- City -->
    <div class="form-group mb-3">
        <label asp-for="City" class="form-label fw-semibold text-light">City:</label>
        <input asp-for="City" class="form-control" placeholder="Enter customer's city" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <!-- State -->
    <div class="form-group mb-3">
        <label asp-for="State" class="form-label fw-semibold text-light">State:</label>
        <input asp-for="State" class="form-control" placeholder="Enter customer's state" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <!-- Country -->
    <div class="form-group mb-3">
        <label asp-for="Country" class="form-label fw-semibold text-light">Country:</label>
        <input asp-for="Country" class="form-control" placeholder="Enter customer's country" required
               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group mt-3 text-center">
        <button type="submit" class="btn btn-success"
                style="background: rgba(40, 167, 69, 0.8); border: 1px solid rgba(40, 167, 69, 0.8); color: white;">
            Add Customer
        </button>
    </div>
</form>
