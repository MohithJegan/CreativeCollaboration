@model AUMenuItemDto

<div class="container mt-4">
    <h2 class="fw-bold text-light">Edit Menu Item</h2>

    <!-- Card -->
    <div class="card border-0 shadow-lg rounded-4 p-4 mt-3"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <div class="card-body">

            <form asp-controller="MenuItemsPage" asp-action="EditMenuItem" asp-route-id="@Model.MenuItemId" method="post" enctype="multipart/form-data">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MenuItemId" />
                <input type="hidden" asp-for="ImagePath" />

                <!-- Item Name -->
                <div class="mb-3">
                    <label asp-for="MName" class="form-label fw-bold text-light">Item Name:</label>
                    <input asp-for="MName" class="form-control" placeholder="Enter menu item name" required
                           style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                    <span asp-validation-for="MName" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold text-light">Description:</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter description" required
                              style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold text-light">Price:</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" required
                           style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <!-- Image Upload -->
                <div class="mb-3">
                    <label for="imageFile" class="form-label fw-bold text-light">Upload New Image:</label>
                    <input asp-for="ImageFile" class="form-control"
                           accept="image/*"
                           style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />

                </div>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <!-- Buttons -->
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary"
                            style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                        Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.MenuItemId" class="btn btn-secondary ms-2"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                        Back to Details
                    </a>
                </div>
                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}