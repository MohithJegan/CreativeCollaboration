@model CreativeCollaboration.Models.MenuItemDto

<div class="container mt-4">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <!-- Card Header -->
        <div class="card-header text-center"
             style="background: rgba(255, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            <h4 class="mb-0 text-light">Confirm Deletion?</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body text-center">
            <h5 class="text-light">Are you sure you want to delete this menu item?</h5>
            <p class="text-muted">This action cannot be undone.</p>
            <p class="text-light"><strong>Item Name:</strong> @Model.MName</p>
            <p class="text-light"><strong>Description:</strong> @Model.Description</p>
            <p class="text-light"><strong>Price:</strong> @Model.Price.ToString("C")</p>
        </div>

        <!-- Buttons -->
        <div class="text-center mb-4">
            <form method="post" asp-action="DeleteMenuItem" asp-route-id="@Model.MenuItemId">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4"
                        style="background: rgba(255, 0, 0, 0.2); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Yes, Delete
                </button>
                <a asp-action="List" class="btn btn-secondary px-4"
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
