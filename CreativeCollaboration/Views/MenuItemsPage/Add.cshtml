@model AUMenuItemDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold text-light">Add New Menu Item</h2>
        <a asp-action="List" class="btn btn-outline-light px-4 py-2">
            Back to List
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-lg p-4 rounded-4 border-0"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <form asp-action="AddMenuItem" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

            <!-- Menu Item Name -->
            <div class="mb-3">
                <label asp-for="MName" class="form-label fw-semibold text-light">Menu Item Name</label>
                <input asp-for="MName" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter menu item name" required />
                <span asp-validation-for="MName" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold text-light">Description</label>
                <textarea asp-for="Description" class="form-control shadow-sm"
                          style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                          placeholder="Enter description" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-semibold text-light">Price</label>
                <input asp-for="Price" class="form-control shadow-sm" type="number" step="0.01"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter price" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <!-- Image -->
            <div class="mb-3">
                <label for="imageFile" class="form-label fw-semibold text-light">Upload Image</label>
                <input asp-for="ImageFile" class="form-control shadow-sm" accept="image/*" style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4 py-2"
                        style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}