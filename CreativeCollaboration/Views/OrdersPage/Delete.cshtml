@model OrderDto

<div class="container mt-4">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <!-- Card Header -->
        <div class="card-header text-center"
             style="background: rgba(255, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            <h4 class="mb-0 text-light">Confirm Deletion?</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <h5 class="text-center text-light">Are you sure you want to delete this order?</h5>
            <p class="text-center text-muted">This action cannot be undone.</p>
            <p class="text-center text-light">Order ID: @Model.OrderId</p>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-borderless"
                       style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                    <tbody>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Order ID</th>
                            <td class="text-light">@Html.DisplayFor(model => model.OrderId)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Customer</th>
                            <td class="text-light">@Html.DisplayFor(model => model.CustomerName)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Order Date</th>
                            <td class="text-light">@Model.OrderDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Total Price</th>
                            <td class="text-light">@Model.TotalOrderPrice.ToString("C")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Buttons -->
            <form method="POST" asp-action="DeleteConfirmed" asp-route-id="@Model.OrderId" class="text-center mt-4">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger px-4"
                        style="background: rgba(255, 0, 0, 0.2); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Confirm Delete
                </button>
                <a asp-action="List" class="btn btn-secondary px-4"
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}